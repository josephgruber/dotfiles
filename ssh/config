Host *
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"

# SSH over Session Manager
host i-* mi-*
    ProxyCommand sh -c "aws ssm start-session --target %h --document-name AWS-StartSSHSession --parameters 'portNumber=%p'"

# Created by AWS Toolkit for VSCode. https://github.com/aws/aws-toolkit-vscode
Host aws-ec2-*
    ForwardAgent yes
    AddKeysToAgent yes
    StrictHostKeyChecking accept-new
    ProxyCommand '/Users/josephgruber/Library/Application Support/Code/User/globalStorage/amazonwebservices.aws-toolkit-vscode/ec2_connect' '%h'
    IdentitiesOnly yes
    IdentityFile '/Users/josephgruber/Library/Application Support/Code/User/globalStorage/amazonwebservices.aws-toolkit-vscode/aws-ec2-key'
    User '%r'

Include ~/.dotfiles/.local/.ssh/*
